<h1>Books</h1>


<table>
<style>
table,th,td
{
border:1px solid black;
border-collapse:collapse
}
</style>
<table style="width:800px">
<tr>
  <th>Title</th>
  <th>Author</th>
  <th>Average Rating</th>
</tr>
<tr>
  <% all_books = Book.read %>
  <% all_books.each do |book| %>


 <tr> <td><%= book["title"] %></td>
 <td><%= book["author"] %></td>
 <% name = book["title"] %>
 <td><%= Review.where("title" => name).average("rating") %></td>
  <% end %>
  </tr>
</tr>
</table>
