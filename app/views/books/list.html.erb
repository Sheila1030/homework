<h1>Books</h1>

  <html> 
<head> 
<link rel="stylesheet" href="http://getbootstrap.com/dist/css/bootstrap.min.css"> 
</head>

<% editors_pick = Review.group("title").order("avg(rating) desc").first[:title] %>

<strong> Don't forget! The current Editor's Pick is: <%= link_to editors_pick, "/books/#{Book.find_by("title" => editors_pick)[:id]}"  %> </strong>
<br>

<table>
<style>
table,th,td
{
border:1px solid black;
border-collapse:collapse
}
</style>
<table style="width:800px">
<tr>
  <th>Title</th>
  <th>Author</th>
  <th>Average Rating</th>
</tr>
<tr>
  <% all_books = Book.read %>
  <% all_books.each do |book| %>


 <tr> <td><%= link_to book["title"], "/books/#{book["book_id"]}" %></td>
 <td><%= book["author"] %></td>
 <% name = book["title"] %>
 <td><%= Review.where("title" => name).average("rating") %></td>
  <% end %>
  </tr>
</tr>
</table>
